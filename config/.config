# Target: x86 64-bit
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y

# Use ext4 rootfs and set rootfs partition size = 10GB (10240 MB)
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_ROOTFS_PARTSIZE=10240
CONFIG_TARGET_IMAGES_GZIP=n

# Basic LuCI web UI
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-base=y

# Filesystem & utilities
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_e2fsprogs=y
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_kmod-overlay=y

# Passwall (front-end) - feed must be available (we'll clone in workflow to be safe)
CONFIG_PACKAGE_luci-app-passwall=y

# AdGuard Home
CONFIG_PACKAGE_adguardhome=y
CONFIG_PACKAGE_luci-app-adguardhome=y

# SmartDNS
CONFIG_PACKAGE_smartdns=y
CONFIG_PACKAGE_luci-app-smartdns=y

# Optional useful tools
CONFIG_PACKAGE_ttyd=y
CONFIG_PACKAGE_luci-app-ttyd=y

# Docker (x86_64)
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_luci-app-dockerman=y
CONFIG_PACKAGE_docker-compose=y
